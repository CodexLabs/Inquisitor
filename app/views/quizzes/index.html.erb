<h1>Listing quizzes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Pass percentage</th>
    <th>Student Link</th>
    <th>Quizzes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @quizzes.each do |quiz| %>
  <tr>
    <td><%= quiz.name %></td>
    <td><%= quiz.pass_percentage %></td>
    <td><%= new_quiz_attempt_url(quiz)%></td>
    <td><%= link_to "Questions", quiz_questions_path(quiz)%></td>
    <td><%= link_to 'Show', quiz %></td>
    <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
    <td><%= link_to 'Destroy', quiz, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

